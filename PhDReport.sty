%% Priedai
% Atnaujinami priedų skyriaus stiliai bei pavaizdavimas turinyje
\renewcommand{\appendix}{%
  \bigskip
  \noindent\Large\textbf{\textit{Priedai}} \par
  \vspace{0.3\baselineskip}
  \renewcommand{\section}{%
    % \cleardoublepage%
    \secdef\@Appendix\@sAppendix%
  }%
  \setcounter{section}{0}%
  \renewcommand{\thesection}{Nr. \arabic{section}.}%
}
\def\@Appendix[#1]#2{%
  \refstepcounter{section}%
  \addcontentsline{toc}{section}%
  {\appendixname~\thesection}%
  {\large\bfseries\appendixname\ \thesection \par
    \indent #2\par}%
  \sectionmark{#1} \vspace{0.2\baselineskip}%
  \footnotesize%
}
\def\@sAppendix#1{%
  {\flushright\large\bfseries\appendixname\par
    \centering#1\par}%
  \vspace{\baselineskip}%
  \footnotesize%
}


